<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg"
    android:scrollbars="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/line"/>

    <FrameLayout
        android:id="@+id/wmFramelayout"
        android:layout_marginTop="0dip"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:fillViewport="true"
        android:background="@color/white"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/singleImageView"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitStart"
            />

        <TextView android:id="@+id/txt_watermark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/singleImageView"
            android:text="@string/app_name"
            android:textSize="20px"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_margin="5dp"
            android:alpha="1.0"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/blue">
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/btn_text"
            android:src="@drawable/text"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:background="@color/bg"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/btn_tools_font"
            android:src="@drawable/font"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:background="@color/bg"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/btn_tools_size"
            android:src="@drawable/size"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:background="@color/bg"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/btn_tools_transparency"
            android:src="@drawable/opacity"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:background="@color/bg"/>


        <ImageButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/btn_save"
            android:src="@drawable/color"
            android:onClick="onClick"
            android:scaleType="centerCrop"
            android:background="@color/bg"/>

    </LinearLayout>



</LinearLayout>
