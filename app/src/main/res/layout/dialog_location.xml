<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/location_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp"
    android:layout_gravity="center" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_location_up">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_location_up_left"
            android:layout_margin="5dp"
            android:text="@string/dot"
            android:textColor="@color/blue"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_location_up_middle"
            android:layout_margin="5dp"
            android:text="@string/dot"
            android:textColor="@color/blue"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_location_up_right"
            android:layout_margin="5dp"
            android:text="@string/dot"
            android:textColor="@color/blue"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_location_middle">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_location_middle_left"
            android:layout_margin="5dp"
            android:text="@string/dot"
            android:textColor="@color/blue"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_location_middle_middle"
            android:layout_margin="5dp"
            android:text="@string/dot"
            android:textColor="@color/blue"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_location_middle_right"
            android:layout_margin="5dp"
            android:text="@string/dot"
            android:textColor="@color/blue"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout_location_down">
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_location_down_left"
            android:layout_margin="5dp"
            android:text="@string/dot"
            android:textColor="@color/blue"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_location_down_middle"
            android:layout_margin="5dp"
            android:text="@string/dot"
            android:textColor="@color/blue"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/btn_location_down_right"
            android:layout_margin="5dp"
            android:text="@string/dot"
            android:textColor="@color/blue"/>
    </LinearLayout>
</LinearLayout>
